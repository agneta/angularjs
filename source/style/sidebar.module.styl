#menu-main {
  position: absolute;
  box-shadow: 0 2px 40px #545454;
  background: #f8f8f8;

  .brand {
    text-align: center;
    padding: 10px;

    .logo {
      width: 160px;
      height: 160px;
      margin: auto;
    }

    .icon {
      margin: auto;
      color: color-primary;
      width: 100px;
      height: 100px;
    }

    .title {
      color: color-primary;
    }

    .image {
      display: block;
      height: 90%;
      width: auto;
    }
  }
}

#menu-page {
  box-shadow: 0px 2px 13px #4c4c4c;
  background: rgb(237, 237, 237);
}

#view-content>.menu {
  z-index: 9999;
  width: 300px;
  transition: transform 400ms ease;
  transform: translateX(-110%);
  top: 0;
  bottom: 0;
  overflow: hidden;
  min-width: 280px;
  max-width: 90%;

  &.showing {
    transform: translateX(0);
  }

  &.unlocked {
    position: absolute !important;
  }

  .header {
    >h2 {
      margin: 0 auto;
      color: color-primary;
    }
  }

  md-list {
    md-icon {
      color: color-primary;
      padding-right: 10px;
    }
  }

  .toolbar {
    background: #e9e9e9;
  }

  md-list-item {
    &.active {
      pointer-events: none;
      background: color-accent;

      &._md-button-wrap>div.md-button:first-child {
        font-weight: bold;
      }
    }

    a.md-button {
      margin: 0;
      padding: 5px 10px;
    }
  }
}

.menu-list {
  .heading {
    background: color-primary;
    color: white;
  }

  .item {
    padding-top: 5px;
    padding-bottom: 5px;
    cursor: pointer;

    &:hover {
      background: rgb(231, 231, 231);
    }

    &.active {
      pointer-events: none;
      background: color-accent;
    }
  }
}