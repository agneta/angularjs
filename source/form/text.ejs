<md-input-container md-no-float class="md-block">
  <%-await template('form/title')%>
  <%-await template('form/description')%>
  <%-await template('form/icon')%>
  <textarea
  ng-model="<%-field.model%>"
  name="<%-field.name%>"
  rows="<%-field.rows%>"
  aria-label="<%-field.name%>"
  <%-formValidators(field)%>
  md-select-on-focus>
</textarea>
<%-await template('form/messages')%>
</md-input-container>
